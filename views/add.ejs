<!DOCTYPE html>
<html>
<head>
    <title>Add Employee</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>

<!-- ===== HEADER ===== -->
<header class="topbar">
    <h2>EMPLOYEE PAYROLL</h2>
</header>


<!-- ===== FORM CARD ===== -->
<div class="container">

    <h2>Employee Payroll Form</h2>

    <form action="/add" method="POST" onsubmit="return validateForm()">

        <!-- NAME -->
        <div class="row">
            <label>Name</label>
            <input type="text" name="name" id="name">
        </div>


        <!-- PROFILE IMAGE -->
        <div class="row">
            <div>Profile Image</div>

            <div class="avatar-group">

                <label class="no">
                    <input type="radio" name="avatar"
                        value="https://i.pravatar.cc/80?img=1" required>
                    <img src="https://i.pravatar.cc/80?img=1">
                </label>

                <label class="no">
                    <input type="radio" name="avatar"
                        value="https://i.pravatar.cc/80?img=2">
                    <img src="https://i.pravatar.cc/80?img=2">
                </label>

                <label class="no">
                    <input type="radio" name="avatar"
                        value="https://i.pravatar.cc/80?img=3">
                    <img src="https://i.pravatar.cc/80?img=3">
                </label>

                <label class="no">
                    <input type="radio" name="avatar"
                        value="https://i.pravatar.cc/80?img=4">
                    <img src="https://i.pravatar.cc/80?img=4">
                </label>

            </div>
        </div>


        <!-- GENDER -->
        <div class="row">
            <label>Gender</label>

            <div>
                <input type="radio" name="gender" value="Male" required> Male
                &nbsp;&nbsp;
                <input type="radio" name="gender" value="Female"> Female
            </div>
        </div>


        <!-- DEPARTMENT -->
        <div class="row">
            <label>Department</label>

            <div>
                <input type="checkbox" name="department" value="HR"> HR
                &nbsp;&nbsp;
                <input type="checkbox" name="department" value="Sales"> Sales
                &nbsp;&nbsp;
                <input type="checkbox" name="department" value="Finance"> Finance
                &nbsp;&nbsp;
                <input type="checkbox" name="department" value="Engineer"> Engineer
                &nbsp;&nbsp;
                <input type="checkbox" name="department" value="Others"> Others
            </div>
        </div>


        <!-- SALARY -->
        <div class="row">
            <label>Salary</label>

            <select name="salary" id="salary">
                <option value="">Select Salary</option>
                <option value="10000">10000</option>
                <option value="20000">20000</option>
                <option value="30000">30000</option>
                <option value="40000">40000</option>
                <option value="50000">50000</option>
            </select>
        </div>


        <!-- START DATE -->
        <div class="row">
            <label>Start Date</label>

            <div class="row">

                <select name="day">
                    <option>Day</option>
                    <% for(let i=1;i<=31;i++){ %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>

                <select name="month">
                    <option>Month</option>
                    <option>Jan</option>
                    <option>Feb</option>
                    <option>Mar</option>
                    <option>Apr</option>
                    <option>May</option>
                    <option>Jun</option>
                    <option>Jul</option>
                    <option>Aug</option>
                    <option>Sep</option>
                    <option>Oct</option>
                    <option>Nov</option>
                    <option>Dec</option>
                </select>

                <select name="year">
                    <option>Year</option>
                    <% for(let i=2015;i<=2030;i++){ %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>

            </div>
        </div>


        <!-- NOTES -->
        <div class="row">
            <label>Notes</label>
            <textarea name="notes" rows="4"></textarea>
        </div>


        <!-- ERROR -->
        <div id="error" class="error"></div>


        <!-- BUTTONS -->
        <div class="btns">

            <button type="button"
                class="cancel"
                onclick="location.href='/'">
                Cancel
            </button>

            <button type="submit" class="submit">
                Submit
            </button>

            <button type="reset" class="reset">
                Reset
            </button>

        </div>

    </form>
</div>


<!-- ===== VALIDATION SCRIPT ===== -->
<script>
function validateForm(){

    const name = document.getElementById("name").value.trim();
    const salary = document.getElementById("salary").value;
    const error = document.getElementById("error");

    if(name === ""){
        error.innerText = "Name cannot be empty";
        return false;
    }

    if(salary === "" || salary < 0){
        error.innerText = "Invalid salary";
        return false;
    }

    error.innerText = "";
    return true;
}
</script>

</body>
</html>
